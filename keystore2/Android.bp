rust_library {
    name: "libkeystore2",
    crate_name: "keystore2",
    srcs: ["src/lib.rs"],

    rustlibs: [
        "android.system.keystore2-rust",
        "android.hardware.keymint-rust",
        "libanyhow",
        "libbinder_rs",
        "libkeystore2_selinux",
        "liblazy_static",
        "liblibsqlite3_sys",
        "liblog_rust",
        "librand",
        "librusqlite",
        "libthiserror",
    ],
}

rust_test {
    name: "keystore2_test",
    crate_name: "keystore2",
    srcs: ["src/lib.rs"],
    test_suites: ["device-tests"],
    auto_gen_config: false,
    test_config: "AndroidTest.xml",
    rustlibs: [
        "android.system.keystore2-rust",
        "android.hardware.keymint-rust",
        "libandroid_logger",
        "libanyhow",
        "libbinder_rs",
        "libkeystore2_selinux",
        "liblazy_static",
        "liblibsqlite3_sys",
        "liblog_rust",
        "librusqlite",
        "libthiserror",
    ],
}

rust_binary {
    name: "keystore2",
    srcs: ["src/keystore2_main.rs"],
    rustlibs: [
        "libandroid_logger",
        "libbinder_rs",
        "libkeystore2",
        "liblog_rust",
    ],
    init_rc: ["keystore2.rc"],
}
